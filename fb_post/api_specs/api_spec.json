{
    "swagger": "2.0",
    "host": "127.0.0.1:8000",
    "basePath": "/api/ip_traffic/",
    "info": {
        "version": "1.0.0",
        "title": "Simple API",
        "description": "A simple API to learn how to write OpenAPI Specification"
    },
    "schemes": [
        "https",
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users"
            },
            "type": "oauth2"
        }
    },
    "definitions": {
        "User":{
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "profile_pic": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "Post": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string"
                },
                "posted_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "posted_by": {
                    "$ref": "#/definitions/User"
                }
            },
            "required": [
                "content",
                "posted_by"
            ]
        },
        "Comment": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string"
                },
                "commented_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "commented_by": {
                    "$ref": "#/definitions/User"
                },
                "parent_comment": {
                    "$ref": "#/definitions/Comment"
                },
                "post": {
                   "$ref": "#/definitions/Post"
                }

            },
            "required": [
                "content",
                "commented_by"
            ]
        },
        "React": {
            "type": "object",
            "properties": {
               "post_id": {
                   "type": "integer",
                   "format": "int64"
               },
                "comment": {
                    "$ref": "#/definitions/Comment"
                },
                "reaction": {
                    "type": "string"
                },
                "reacted_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "reacted_by": {
                    "$ref": "#/definitions/User"
                }

            },
            "required": [
                "reacted_by",
                "reaction"
            ]
        }
    },
    "parameters": {
        "CreatePost": {
            "name": "user",
            "in": "body",
            "description": "create post",
            "schema": {
                "type": "object",
                "properties": {
                    "content": {
                        "type": "string"
                    },
                    "posted_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "required": [
                    "content"
                ]
            }
        },
        "UserId": {
            "name": "user_id",
            "in": "path",
            "required": true,
            "description": "id of user",
            "type": "integer",
            "format": "int64"
        },
        "GetPosts": {
            "name": "user_id",
            "in": "path",
            "required": true,
            "description": "id of user",
            "type": "integer",
            "format": "int64"
        }
    },
    "responses": {
        "AllPosts": {
            "description": "all posts",
            "schema": {
                "type": "object",
                "properties": {
                    "post_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "posted_by": {
                        "type": "object",
                         "properties": {
                             "user_id":{
                                 "type": "integer",
                                 "format": "int64"
                             },
                             "profile_pic": {
                                 "type": "string"
                             }
                         }
                    },
                    "posted_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "post_content": {
                        "type": "string"
                    },
                    "reactions": {
                        "type": "array",
                        "$ref": "#/definitions/React"

                    },
                    "comments": {
                        "type":"array",
                        "$ref": "#/definitions/Comment"
                    },
                    "comments_count": {
                        "type": "integer",
                        "format": "int64"
                    }

                }
            }
        }
    },
    "paths": {
        "/create_post/{user_id}/":{
            "post": {
                "operationId": "create_post",
                "summary": "create post",
                "description": "create post",
                "parameters": [
                    {
                         "$ref": "#/parameters/CreatePost"
                    },
                    {
                        "$ref": "#/parameters/UserId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "succesfully created post"
                    },
                    "401": {
                        "description": "invalid User Id"
                    }
                }
            }
        },
        "/get_posts/{user_id}": {
            "get": {
                "operationId": "get_posts_of_user",
                "summary": "get posts of user",
                "description": "post for given user",
                "parameters": [
                    {
                        "$ref": "#/parameters/GetPosts"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/responses/AllPosts"
                    },
                    "404": {
                        "description": "Post not found"
                    },
                    "401": {
                        "description": "no user exist with this id"
                    }
                }
            }
        }
    }
}